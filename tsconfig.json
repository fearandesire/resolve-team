{
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "/.dist",
    "src/test/*.ts",
    "node_modules"
  ],
  "extends": "@tsconfig/node19/tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "skipLibCheck": true,
  }
}