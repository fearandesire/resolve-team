{
	"name": "resolve-team",
	"version": "1.4.5",
	"description": "Resolve NBA & NFL sports team names and information via fuzzy search",
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"module": "./dist/index.js",
	"scripts": {
		"build": "tsc",
		"test": "jest",
		"dev": "tsx ./src/index.ts"
	},
	"keywords": [
		"nba",
		"nfl",
		"sports",
		"resolve",
		"team"
	],
	"author": "fearandesire",
	"license": "MIT",
	"dependencies": {
		"fuse.js": "^6.6.2",
		"npm-run-all": "^4.1.5",
		"typescript": "^5.0.2"
	},
	"devDependencies": {
		"@babel/core": "^7.22.11",
		"@babel/preset-env": "^7.22.10",
		"@babel/preset-typescript": "^7.22.11",
		"@tsconfig/node19": "^19.1.2",
		"@tsconfig/recommended": "^1.0.3",
		"@types/jest": "^29.5.11",
		"@types/node": "^20.11.5",
		"babel-jest": "^29.6.4",
		"jest": "^29.7.0",
		"ts-jest": "^29.1.1",
		"tsx": "^4.7.0"
	},
	"jest": {
		"moduleFileExtensions": [
			"js",
			"json",
			"ts"
		],
		"rootDir": "src",
		"testRegex": ".*\\.spec\\.ts$",
		"transform": {
			"^.+\\.(t|j)s$": "ts-jest"
		},
		"collectCoverageFrom": [
			"**/*.(t|j)s"
		],
		"coverageDirectory": "../coverage",
		"testEnvironment": "node"
	}
}
