{
	"name": "resolve-team",
	"version": "1.7.0",
	"description": "Resolve NBA & NFL sports team names and information via fuzzy search",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"module": "dist/index.js",
	"exports": {
		".": "./dist/index.js"
	},
	"scripts": {
		"build": "tsc",
		"test": "jest",
		"dev": "tsx ./src/index.ts",
		"husky": "node ./node_modules/husky/lib/bin.js",
		"prepare": "husky && husky install"
	},
	"keywords": [
		"nba",
		"nfl",
		"sports",
		"resolve",
		"team"
	],
	"author": "fearandesire",
	"license": "MIT",
	"dependencies": {
		"@tsconfig/node19": "^19.1.2",
		"fuse.js": "^6.6.2",
		"npm-run-all": "^4.1.5",
		"typescript": "^5.0.2"
	},
	"devDependencies": {
		"@babel/core": "^7.22.11",
		"@babel/preset-env": "^7.22.10",
		"@babel/preset-typescript": "^7.22.11",
		"@tsconfig/recommended": "^1.0.3",
		"@types/jest": "^29.5.11",
		"@types/node": "^20.11.5",
		"@typescript-eslint/eslint-plugin": "6.19.0",
		"@typescript-eslint/parser": "6.19.0",
		"babel-jest": "^29.6.4",
		"eslint": "8.22.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-prettier": "^5.1.3",
		"husky": "^8.0.0",
		"jest": "^29.7.0",
		"lint-staged": "^15.2.2",
		"prettier": "^3.2.5",
		"ts-jest": "^29.1.1",
		"tsx": "^4.7.0"
	},
	"jest": {
		"moduleFileExtensions": [
			"js",
			"json",
			"ts"
		],
		"rootDir": "src",
		"testRegex": ".*\\.spec\\.ts$",
		"transform": {
			"^.+\\.(t|j)s$": "ts-jest"
		},
		"collectCoverageFrom": [
			"**/*.(t|j)s"
		],
		"globals": {
			"'ts-jest'": {
				"useESM": true
			}
		},
		"moduleNameMapper": {
			"^(\\..*)\\.js$": "$1"
		},
		"coverageDirectory": "../coverage",
		"testEnvironment": "node"
	}
}
